<Page
    x:Class="BussenWithNav.Pages.Resultpagina"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BussenWithNav.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="DarkGray">
        <StackPanel x:Name="spSpelers" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center"  Margin="20">
            <TextBlock Text="Spelers naam: " FontStyle="Normal" FontSize="50" Width="auto" Height="auto" Foreground="White" TextAlignment="Center" FontWeight="Bold"></TextBlock>
            <TextBlock x:Name="tbResult" FontSize="40" Width="auto" Height="auto" Foreground="Black" FontWeight="Bold" TextAlignment="Center"></TextBlock>

            <TextBlock Text="Bedrag: " FontStyle="Normal" FontSize="50" Width="auto" Height="auto" TextAlignment="Center" FontWeight="Bold" Foreground="White"></TextBlock>
            <TextBlock x:Name="tbBedragResult" FontSize="40" Width="auto" Height="auto" Foreground="Black" FontWeight="Bold" TextAlignment="Center"></TextBlock>
        </StackPanel>
    </Grid>
</Page>
